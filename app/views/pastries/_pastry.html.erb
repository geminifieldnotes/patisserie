<div id="<%= dom_id pastry %>">
  <% if @action == "show" %>
    <h2 class="title is-4"><%= pastry.name %></h2>
  <% else %>
    <p>
      <strong><%= link_to pastry.name, pastry %></strong>
    </p>
  <% end %>

  <% if @action == "show" %>
    <%= image_tag pastry.image.to_s if pastry.image.present? %>
  <% else %>
    <%= image_tag pastry.image.thumb.to_s if pastry.image.present? %>
  <% end %>

  <p>
    <%= pastry.pastry_type.name %>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<%= "#{number_to_currency pastry.price}" %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= pastry.description %>
  </p>

  <p><%= link_to 'Add to Cart', '#', class: "button mt-4 is-small is-responsive is-warning is-active is-rounded" %></p>

</div>
